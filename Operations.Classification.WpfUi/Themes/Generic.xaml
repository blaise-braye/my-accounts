<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Operations.Classification.WpfUi.Technical.Controls">

    <Style TargetType="{x:Type controls:PopupContent}" BasedOn="{StaticResource {x:Type ContentControl}}">
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <StackPanel Background="{DynamicResource ContextMenuBackgroundBrush}">
                        <ContentPresenter Content="{TemplateBinding ContentControl.Content}" />
                    </StackPanel>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>