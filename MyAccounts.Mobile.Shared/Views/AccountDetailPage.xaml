<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyAccounts.Mobile.Shared.Views.AccountDetailPage"
             Title="{Binding Title}"
             BindingContext="{Binding Source={StaticResource Locator}, Path=ItemDetailsPage}">
	<StackLayout Spacing="20" Padding="15">
		<Label Text="{Binding Account.Name}" FontSize="Medium"/>
        <Label Text="{Binding Account.Summary}" FontSize="Small"/>
    </StackLayout>
</ContentPage>